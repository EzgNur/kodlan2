import discord #discord: Discord botu oluşturmak ve yönetmek için kullanılan ana kütüphanedir.
from fonksiyonsifre import gen_pass #fonksiyonsifre modülünden gen_pass fonksiyonu içe aktarılır.

# İstekler değişkeni botun yetkilerini saklar
intents = discord.Intents.default()
# Mesaj okuma yetkisini etkinleştirme
intents.message_content = True
# Bir bot oluşturma ve yetkileri aktarma
client = discord.Client(intents=intents)

@client.event #@client.event: Bu bir dekoratördür ve botun belirli bir olayı dinlemesini sağlar.
async def on_ready():
    print(f'{client.user} olarak giriş yapıldı')

@client.event
async def on_message(message): #on_message: Bu fonksiyon, bot bir mesaj aldığında çalışır.
    if message.author == client.user:
        return
    if message.content.startswith('$hello'):
        await message.channel.send("Merhaba!")
    elif message.content.startswith('$bye'):
        await message.channel.send("\U0001f642")
    else:
        await message.channel.send("Şifreniz: " + gen_pass(10))

client.run("MTI2NTUyODk4NTU1NTcwMTc4Mg.GFbP-B.DyeKG6hs8g3RrRYGlFCeUePfS4YJJwUMXSse18")

